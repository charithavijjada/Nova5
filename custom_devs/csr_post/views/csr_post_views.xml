<odoo>
  <record id="view_csr_post_form" model="ir.ui.view">
    <field name="name">csr.post.form</field>
    <field name="model">csr.post</field>
    <field name="arch" type="xml">
      <form string="CSR Post">
        <sheet>
          <group>
            <field name="title"/>
            <field name="description"/>
          </group>
        </sheet>
      </form>
    </field>
  </record>

  <record id="view_csr_post_tree" model="ir.ui.view">
  <field name="name">csr.post.tree</field>
  <field name="model">csr.post</field>
  <field name="arch" type="xml">
    <list>
      <field name="title"/>
      <field name="description"/>
    </list>
  </field>
</record>


  <record id="action_csr_post" model="ir.actions.act_window">
  <field name="name">CSR Posts</field>
  <field name="res_model">csr.post</field>
  <field name="view_mode">list,form</field>
</record>


  <menuitem id="menu_csr_root" name="CSR"/>
  <menuitem id="menu_csr_post" name="Posts" parent="menu_csr_root" action="action_csr_post"/>
</odoo>
